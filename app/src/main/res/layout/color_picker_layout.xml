<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:toolls="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">



    <LinearLayout
        android:id="@+id/color_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="25dp"
        android:overScrollMode="always"
        android:gravity="center_vertical"
        android:background="@drawable/gradient_layout"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_color_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            toolls:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="50"
            tools:listitem="@layout/item_card"/>
    </LinearLayout>

   <!-- <ScrollView
        android:id="@+id/color_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="always"
        android:background="@drawable/gradient_layout">



        &lt;!&ndash;&ndash;&gt;


    </ScrollView>
-->



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">

        <TextView
            android:id="@+id/tv_rgb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="TextView"
            style="@style/TextColorRgbAndHsv"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_hsv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="TextView"
            style="@style/TextColorRgbAndHsv"
            android:layout_marginTop="10dp"
            android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>