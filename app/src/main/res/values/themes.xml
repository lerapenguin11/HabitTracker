
<resources>
    <style name="Theme.HabitTracker" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorSurfaceContainerHigh">#EAEBE5</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>
        <item name="android:statusBarColor">@color/md_theme_light_background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
    </style>

    <style name="ToolbarTitleText" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="TextMotivationalStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:textColor">@color/md_theme_light_onTertiaryContainer</item>
    </style>

    <style name="TextNoHabitsStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/md_theme_light_onSurfaceVariant</item>
    </style>

    <style name="TextTitleCardHabits">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TextDescCardHabits">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.Material3.Chip.Assist">
        <item name="android:textAppearance">@style/BodyMedium</item>
        <item name="android:background">@color/md_theme_light_background</item>
        <item name="chipStrokeWidth">0.5dp</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">2dp</item>
        <item name="chipCornerRadius">5dp</item>
        <item name="textStartPadding">5dp</item>
        <item name="chipIconSize">14dp</item>
        <item name="chipStrokeColor">@color/md_theme_light_surfaceTint</item>
        <item name="checkedIconVisible">true</item>
    </style>

    <style name="BodyMedium">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:textColor">@color/md_theme_light_onSurfaceVariant</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>
    
    <style name="TextHelper">
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">#151515</item>
        <item name="helperTextTextAppearance">@font/roboto_medium</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextButton">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/cardview_light_background</item>
    </style>

    <style name="TextStyleArray">
        <item name="android:background">@color/md_theme_light_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/md_theme_dark_surfaceVariant</item>
    </style>

    <style name="TextColorRgbAndHsv">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/md_theme_dark_surfaceVariant</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.App.Text</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button.Negative</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Widget.App.Button.Positive" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/md_theme_light_surfaceTint</item>
    </style>

    <style name="Widget.App.Button.Negative" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/md_theme_light_onSurfaceVariant</item>
    </style>

    <style name="MaterialAlertDialog.App.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/md_theme_dark_surfaceVariant</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/md_theme_dark_background</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
